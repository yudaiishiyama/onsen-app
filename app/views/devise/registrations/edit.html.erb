

<%= form_with model: @user, url: edit_user_registration_path, id: 'new_user', class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>


  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例) furima太郎", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">プロフィール</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :profile, class:"input-default", id:"email", placeholder:"自己紹介になるもの", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">プロフィール画像</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.file_field :image, class:"user-image", id:"image",  autofocus: true %>
  </div>
  <div class='register-btn'>
    <%= f.submit "変更する" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>
