<!DOCTYPE html>
<html>
  <head>
    <title>OnsenApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Londrina+Shadow" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>

  <body>
    <header>
        <div class="heading">
          <%= link_to 'Yumegurism', root_path, class: "appname" %>
        </div>
          <% if user_signed_in? %>
          <div class="navbar">
            <ul class='nav-lists'>
              <li><%= link_to current_user.name, user_path(current_user.id), class: "user-nickname" %></li> 
              <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
              <li><%= link_to '新規投稿', new_post_path, class: "new-post" %></li>
              <li><%= link_to '投稿一覧', posts_path, class: "post-all" %></li>
              <li><%= link_to '🔔', "#", class: "post-all" %></li>
          <% else %>
              <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
              <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
            </ul>
          </div>
          <% end %>
        </div>
    </header>
    <%= yield %>
  </body>
</html>
