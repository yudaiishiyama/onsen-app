<!DOCTYPE html>
<html>
  <head>
    <title>OnsenApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <div class="heading">
          <h1>
          <%= link_to '湯巡り', root_path %>
          </h1>
        </div>
          <% if user_signed_in? %>
          <div class="navbar">
            <ul class='nav-lists'>
              <li><%= link_to 'マイページ', "#", class: "user-nickname" %></li> 
              <li><%= link_to 'ログアウト', post_path(current_user.id), method: :delete, class: "logout" %></li> 
              <li><%= link_to '新規投稿', new_post_path, class: "new-post" %></li>
              <li><%= link_to '投稿一覧', posts_path, class: "post-all" %></li>
              <li><%= link_to '🔔', "#", class: "post-all" %></li>
          <% else %>
              <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
              <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
            </ul>
          </div>
          <% end %>
        </div>
    </header>
    <%= yield %>
  </body>
</html>
